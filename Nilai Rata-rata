import java.util.Scanner;

public class Nilai {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        ArrayList<Integer> list = new ArrayList<>();

        try {
            System.out.print("Jumlah bilangan: ");
            int n = in.nextInt();

            for(int i=0;i<n;i++){
                System.out.print("Input bilangan ke-"+i+": ");
                list.add(in.nextInt());
            }

            double sum = 0;
            for(int x : list) sum += x;

            System.out.println("Rata-rata: " + (sum/n));

        } catch(Exception e){
            System.out.println("Error: Input bukan angka!");
        }
    }
}
